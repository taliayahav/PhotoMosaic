<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<GridPane fx:controller="yahav.photomosaic.PhotomosaicApplication"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
<padding>
    <Insets top="25" right="2" bottom="40" left="2"/>
</padding>


<Label fx:id="filePathLabel" text="Choose a picture to create a photomosaic:" GridPane.columnIndex="0"
       GridPane.rowIndex="0" GridPane.columnSpan="10"/>

    <Button fx:id="openButton" text="Open" GridPane.columnIndex="1" GridPane.rowIndex="1"
            onAction="#openButton"/>

    <ImageView fx:id="photomosaicImage" GridPane.rowIndex="5" fitHeight="500.0" fitWidth="600.0"
               GridPane.columnIndex="1" GridPane.halignment="CENTER">
    </ImageView>


</GridPane>

